<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}SymBook - A Magical Reading Journey{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Floating Books -->
   
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">SymBook</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    {% if app.user %}
                        <li class="nav-item">
                            <span class="nav-link">Welcome, {{ app.user.email }}</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_client') }}">Menu</a>
                        </li>
                      
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                        </li>
						  <li class="nav-item">
                            <a href="{{ path('app_client_panier') }}" class="btn btn-outline-dark btn-sm mx-2">View Cart</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">Signup</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    {% block body %}{% endblock %}

    <script src="{{ asset('build/app.js') }}" defer></script>
    {% block javascripts %}{% endblock %}
</body>
</html>