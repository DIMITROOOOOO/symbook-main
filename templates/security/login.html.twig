{% extends 'base3.html.twig' %}

{% block title %}Login - SymBook
{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Enter the Magical Library</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card book-card p-4">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form method="post" action="{{ path('app_login') }}">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" id="password" class="form-control" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button class="btn btn-magical w-100" type="submit">Login</button>
                    </form>
                    <p class="mt-3 text-center">No account?
                        <a href="{{ path('app_register') }}" class="special-text">Sign up here</a>.</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}