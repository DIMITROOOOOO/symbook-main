<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}BookHaven - A Magical Reading Journey{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <script src="{{ asset('build/app.js') }}" defer></script>
</head>
<body class="font-poppins bg-light text-dark">
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg bg-white shadow-lg transition-all duration-300">
        <div class="container">
            <a class="navbar-brand font-merriweather fs-3 fw-bold text-teal-600" href="{{ path('app_home') }}">BookHaven</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto gap-3">
                    
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center text-dark fw-semibold {{ app.request.attributes.get('_route') == 'app_categories_index' ? 'active' : '' }}" href="{{ path('app_categories_index') }}">
                            <i class="bi bi-tags me-1"></i> Catégories
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center text-dark fw-semibold {{ app.request.attributes.get('_route') == 'app_livre_index' ? 'active' : '' }}" href="{{ path('app_livre_index') }}">
                            <i class="bi bi-book me-1"></i> Livres
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center text-dark fw-semibold {{ app.request.attributes.get('_route') == 'app_admin_dashboard' ? 'active' : '' }}" href="{{ path('app_admin_dashboard') }}">
                            <i class="bi bi-graph-up me-1"></i> Statistics
                        </a>
                    </li>
                    
                </ul>
                <ul class="navbar-nav ms-auto gap-3">
                    {% if app.user %}
                        <li class="nav-item">
                            <span class="nav-link text-dark fw-semibold">Welcome, {{ app.user.email }}</span>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" href="{{ path('app_logout') }}">Logout</a>
                        </li>
                       
                   
                      
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    {% block body %}{% endblock %}

    <!-- Footer -->
    <footer class="position-relative bg-teal-600 text-white py-5 overflow-hidden">
        <div class="wave position-absolute bottom-0 start-0 w-100 h-100 bg-wave"></div>
        <div class="container position-relative z-10 text-center">
            <p class="fs-6 mb-3">© {{ 'now'|date('Y') }} BookHaven. All rights reserved.</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="#" class="text-white hover-text-coral-400"><i class="bi bi-facebook fs-4"></i></a>
                <a href="#" class="text-white hover-text-coral-400"><i class="bi bi-twitter fs-4"></i></a>
                <a href="#" class="text-white hover-text-coral-400"><i class="bi bi-instagram fs-4"></i></a>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>