<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}SymBook - A Magical Reading Journey
			{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
		<!-- Google Fonts for a magical, bookish vibe -->
		<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
	
</head>
<body>
	<!-- Floating Books -->
	
	<nav class="navbar navbar-expand-lg shadow-sm">
		<div class="container-fluid">
			<a class="navbar-brand fw-bold" href="{{ path('app_home') }}">SYMBOOK</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link {{ app.request.attributes.get('_route') == 'app_categories_index' ? 'active' : '' }}" href="{{ path('app_categories_index') }}">
							<i class="bi bi-tags me-1"></i>Catégories
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link {{ app.request.attributes.get('_route') == 'app_livre_index' ? 'active' : '' }}" href="{{ path('app_livre_index') }}">
							<i class="bi bi-book me-1"></i>Livres
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link {{ app.request.attributes.get('_route') == 'app_admin_dashboard' ? 'active' : '' }}" href="{{ path('app_admin_dashboard') }}">
							<i class="bi bi-book me-1"></i>statistics
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link {{ app.request.attributes.get('_route') == 'app_contact' ? 'active' : '' }}">
							<i class="bi bi-envelope me-1"></i>Contactez-nous
						</a>
					</li>
				</ul>
				<ul class="navbar-nav ms-auto">
					{% if app.user %}
						<li class="nav-item">
							<span class="nav-link">Welcome,
								{{ app.user.email }}</span>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_client') }}">Dashboard</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_login') }}">Login</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_register') }}">Signup</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</div>
	</nav>
	{% block body %}{% endblock %}
	{% block javascripts %}
            {{ encore_entry_script_tags('app') }}
		{% block importmap %}
			{{ importmap('app') }}
		{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	{% endblock %}
</body></html>
