<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}BookHaven - A Magical Reading Journey{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <script src="{{ asset('build/app.js') }}" defer></script>
</head>
<body class="font-poppins bg-light text-dark">
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg bg-white shadow-lg transition-all duration-300">
        <div class="container">
            <a class="navbar-brand font-merriweather fs-3 fw-bold text-teal-600" href="{{ path('app_home') }}">BookHaven</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto gap-3">
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center text-dark fw-semibold" href="{{ path('app_home') }}"><i class="bi bi-house-door me-1"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center text-dark fw-semibold" href="{{ path('app_client') }}"><i class="bi bi-shop me-1"></i> Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center text-dark fw-semibold" href="{{ path('app_client') }}"><i class="bi bi-book me-1"></i> Books</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto gap-3">
                    {% if app.user %}
                        <li class="nav-item">
                            <span class="nav-link text-dark fw-semibold">Welcome, {{ app.user.email }}</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" href="{{ path('app_logout') }}">Logout</a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app_client_panier') }}" class="nav-link btn btn-outline-teal btn-sm mx-2 text-teal-600 fw-semibold">View Cart <i class="bi bi-cart ms-1"></i></a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" href="{{ path('app_login') }}"><i class="bi bi-person fs-5"></i> Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" href="{{ path('app_register') }}"><i class="bi bi-person-plus fs-5"></i> Signup</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    {% block body %}{% endblock %}

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>